    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "nestjs-i18n": "^10.4.5",
    "nestjs-pino": "^4.1.0",
    "nodemailer": "^6.9.14",
    "pino": "^9.3.2",
    "prettier-plugin-organize-imports": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ua-parser-js": "^1.0.38"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.4",
    "@nestjs/schematics": "^10.1.4",
